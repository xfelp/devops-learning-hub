pipeline {
  agent any
  options {
    timestamps()
    // Si tienes el plugin AnsiColor y quieres color de consola:
    // wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm'])
  }
  environment {
    TF_IN_AUTOMATION = 'true'
    TF_INPUT = '0'
  }
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Terraform CLI') {
      steps {
        sh '''
          bash -euxo pipefail <<'BASH'
          TF_DIR="$WORKSPACE/.tf-bin"
          TF_BIN="$TF_DIR/terraform"
          VER="1.6.6"

          mkdir -p "$TF_DIR"
          if [ ! -x "$TF_BIN" ]; then
            curl -fsSLO "https://releases.hashicorp.com/terraform/${VER}/terraform_${VER}_linux_amd64.zip"
            if command -v unzip >/dev/null 2>&1; then
              unzip -o "terraform_${VER}_linux_amd64.zip" -d "$TF_DIR"
            elif command -v jar >/dev/null 2>&1; then
              (cd "$TF_DIR" && jar xf "$WORKSPACE/terraform_${VER}_linux_amd64.zip")
            else
              python3 - <<'PY'
import os, zipfile
zipfile.ZipFile(os.path.join(os.environ['WORKSPACE'], f"terraform_{os.environ.get('VER','1.6.6')}_linux_amd64.zip")).extractall(os.environ['TF_DIR'])
PY
            fi
            chmod +x "$TF_DIR/terraform"
          fi

          "$TF_DIR/terraform" -version
          BASH
        '''
      }
    }

    stage('Init & Validate') {
      steps {
        dir('jenkins/terraform-jenkins-vm') {
          withCredentials([file(credentialsId: 'gcp-sa-json', variable: 'GOOGLE_CLOUD_KEYFILE_JSON')]) {
            sh '''
              bash -euxo pipefail <<'BASH'
              export PATH="$WORKSPACE/.tf-bin:$PATH"
              export GOOGLE_APPLICATION_CREDENTIALS="$GOOGLE_CLOUD_KEYFILE_JSON"

              terraform init -input=false -upgrade
              terraform validate
              BASH
            '''
          }
        }
      }
    }

    stage('Plan') {
      steps {
        dir('jenkins/terraform-jenkins-vm') {
          withCredentials([file(credentialsId: 'gcp-sa-json', variable: 'GOOGLE_CLOUD_KEYFILE_JSON')]) {
            sh '''
              bash -euxo pipefail <<'BASH'
              export PATH="$WORKSPACE/.tf-bin:$PATH"
              export GOOGLE_APPLICATION_CREDENTIALS="$GOOGLE_CLOUD_KEYFILE_JSON"

              terraform plan -input=false -out=tfplan -compact-warnings
              BASH
            '''
          }
        }
      }
    }

    stage('Manual Approval') {
      steps {
        timeout(time: 15, unit: 'MINUTES') {
          input message: 'Â¿Aplicar los cambios de Terraform?', ok: 'Aplicar'
        }
      }
    }

    stage('Apply') {
      steps {
        dir('jenkins/terraform-jenkins-vm') {
          withCredentials([file(credentialsId: 'gcp-sa-json', variable: 'GOOGLE_CLOUD_KEYFILE_JSON')]) {
            sh '''
              bash -euxo pipefail <<'BASH'
              export PATH="$WORKSPACE/.tf-bin:$PATH"
              export GOOGLE_APPLICATION_CREDENTIALS="$GOOGLE_CLOUD_KEYFILE_JSON"

              terraform apply -input=false -auto-approve tfplan
              terraform output || true
              BASH
            '''
          }
        }
      }
    }
  }
  post {
    always {
      dir('jenkins/terraform-jenkins-vm') {
        sh '''
          bash -euxo pipefail <<'BASH'
          export PATH="$WORKSPACE/.tf-bin:$PATH"
          terraform output -json > tf-outputs.json || true
          BASH
        '''
        archiveArtifacts artifacts: 'tf-outputs.json', onlyIfSuccessful: false, fingerprint: true
      }
    }
  }
}
