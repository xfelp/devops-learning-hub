pipeline {
  agent any
  options {
    timestamps()
    // Si instalas el plugin AnsiColor, puedes envolver la consola con:
    // wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm'])
  }
  environment {
    TF_IN_AUTOMATION = 'true'
    TF_INPUT = '0'
  }
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Terraform CLI') {
      steps {
        sh '''
          set -e
          cat > .ci_tfcli.sh <<'BASH'
          set -euo pipefail
          TF_DIR="$WORKSPACE/.tf-bin"; export TF_DIR
          TF_BIN="$TF_DIR/terraform"
          VER="1.6.6"; export VER

          mkdir -p "$TF_DIR"
          if [ ! -x "$TF_BIN" ]; then
            curl -fsSLO "https://releases.hashicorp.com/terraform/${VER}/terraform_${VER}_linux_amd64.zip"
            if command -v unzip >/dev/null 2>&1; then
              unzip -o "terraform_${VER}_linux_amd64.zip" -d "$TF_DIR"
            elif command -v jar >/dev/null 2>&1; then
              (cd "$TF_DIR" && jar xf "$WORKSPACE/terraform_${VER}_linux_amd64.zip")
            else
              # Fallback sin unzip/jar: usar python3 para extraer el zip
              python3 - "$TF_DIR" "$WORKSPACE" "$VER" <<'PY'
import sys, os, zipfile
tf_dir, ws, ver = sys.argv[1:]
fn = os.path.join(ws, f"terraform_{ver}_linux_amd64.zip")
zipfile.ZipFile(fn).extractall(tf_dir)
PY
            fi
            chmod +x "$TF_DIR/terraform"
          fi

          export PATH="$TF_DIR:$PATH"
          terraform -version
          BASH
          bash ./.ci_tfcli.sh
        '''
      }
    }

    stage('Init & Validate') {
      steps {
        dir('jenkins/terraform-jenkins-vm') {
          withCredentials([file(credentialsId: 'gcp-service-account-key', variable: 'GOOGLE_CLOUD_KEYFILE_JSON')]) {
            sh '''
              set -e
              cat > .ci_init.sh <<'BASH'
              set -euo pipefail
              export PATH="$WORKSPACE/.tf-bin:$PATH"
              export GOOGLE_APPLICATION_CREDENTIALS="$GOOGLE_CLOUD_KEYFILE_JSON"

              terraform init -input=false -upgrade
              terraform validate
              BASH
              bash ./.ci_init.sh
            '''
          }
        }
      }
    }

    stage('Plan') {
      steps {
        dir('jenkins/terraform-jenkins-vm') {
          withCredentials([file(credentialsId: 'gcp-service-account-key', variable: 'GOOGLE_CLOUD_KEYFILE_JSON')]) {
            sh '''
              set -e
              cat > .ci_plan.sh <<'BASH'
              set -euo pipefail
              export PATH="$WORKSPACE/.tf-bin:$PATH"
              export GOOGLE_APPLICATION_CREDENTIALS="$GOOGLE_CLOUD_KEYFILE_JSON"

              terraform plan -input=false -out=tfplan -compact-warnings
              BASH
              bash ./.ci_plan.sh
            '''
          }
        }
      }
    }

    stage('Manual Approval') {
      steps {
        timeout(time: 15, unit: 'MINUTES') {
          input message: 'Â¿Aplicar los cambios de Terraform?', ok: 'Aplicar'
        }
      }
    }

    stage('Apply') {
      steps {
        dir('jenkins/terraform-jenkins-vm') {
          withCredentials([file(credentialsId: 'gcp-service-account-key', variable: 'GOOGLE_CLOUD_KEYFILE_JSON')]) {
            sh '''
              set -e
              cat > .ci_apply.sh <<'BASH'
              set -euo pipefail
              export PATH="$WORKSPACE/.tf-bin:$PATH"
              export GOOGLE_APPLICATION_CREDENTIALS="$GOOGLE_CLOUD_KEYFILE_JSON"

              terraform apply -input=false -auto-approve tfplan
              terraform output || true
              BASH
              bash ./.ci_apply.sh
            '''
          }
        }
      }
    }
  }
  post {
    always {
      dir('jenkins/terraform-jenkins-vm') {
        sh '''
          set -e
          cat > .ci_post.sh <<'BASH'
          set -euo pipefail
          export PATH="$WORKSPACE/.tf-bin:$PATH"
          terraform output -json > tf-outputs.json || true
          BASH
          bash ./.ci_post.sh
        '''
        archiveArtifacts artifacts: 'tf-outputs.json', onlyIfSuccessful: false, fingerprint: true
      }
    }
  }
}
